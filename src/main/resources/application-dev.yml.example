spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/memorix
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

  data:
    redis:
      host: localhost
      port: 6379
      timeout: 2000ms

    mongodb:
      host: localhost
      port: 27017
      username: mongo
      password: mongo
      database: memorix
      uuid-representation: standard

  rabbitmq:
    host: localhost
    port: 5672
    username: rabbitmq
    password: rabbitmq

  mail:
    host: localhost
    port: 1025
    username: 
    password: 
    properties:
      mail:
        smtp:
          auth: false
          starttls:
            enable: false

management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      show-details: always

logging:
  level:
    root: INFO
    andrehsvictor.memorix: DEBUG
    org.springframework.web: DEBUG
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

memorix:
  storage:
    endpoint: http://localhost:9000
    access-key: minio
    secret-key: minio123
    bucket-name: memorix