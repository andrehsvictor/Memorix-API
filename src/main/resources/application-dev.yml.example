spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/memorix
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

  data:
    redis:
      host: localhost
      port: 6379
      timeout: 2000ms

    mongodb:
      host: localhost
      port: 27017
      username: mongo
      password: mongo
      database: memorix
      uuid-representation: standard

  rabbitmq:
    host: localhost
    port: 5672
    username: rabbitmq
    password: rabbitmq

  mail:
    host: localhost
    port: 1025
    properties:
      mail:
        smtp:
          auth: false
          starttls:
            enable: false

management:
  endpoints:
    web:
      exposure:
        include: health,prometheus
  endpoint:
    health:
      show-details: always

logging:
  level:
    root: INFO
    andrehsvictor.memorix: DEBUG
    org.springframework.web: DEBUG
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

memorix:
  minio:
    endpoint: http://localhost:9000
    access-key: minio
    secret-key: minio123
    bucket-name: memorix
  jwt:
    rsa:
      public-key:
        path: file:certs/public.pem
      private-key:
        path: file:certs/private.pem
    access-token:
      lifetime: 15m
    refresh-token:
      lifetime: 1h
  action-tokens:
    reset-password:
      lifetime: 15m
    verify-email:
      lifetime: 15m
    change-email:
      lifetime: 15m
  cors:
    allowed-origins: "*"
    allowed-methods: "GET,POST,PUT,PATCH,DELETE,OPTIONS,HEAD"